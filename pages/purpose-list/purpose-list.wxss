/**index.wxss**/
@import "../../common/lib/weui.wxss";

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.purpose-list-item {
  position: relative;
  display: -webkit-box;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
}

.purpose-right {
  flex: 1;
  display: inline-block;
  margin-left: 10rpx;
  position: relative;
}

.kind-list-item {
  width: 100%;
}

.add-information {
  display: block;
  text-align: right;
  flex: 1;
}

.text-distance {
  text-align: right;
  flex: 1;
}

