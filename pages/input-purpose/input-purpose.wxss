}

.add-information {
  display: block;
  text-align: right;
  flex: 1;
}

.edit-image {
  width: 32rpx;
  height: 32rpx;
  padding-left: 20rpx;
  top: 5rpx;
}

.text {
  font-size: 28rpx;
}

