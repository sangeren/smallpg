<!--pages/input-purpose/base-infor/base-infor.wxml-->
<view class="page-body">
  <view class="page-section">
    <view class="weui-cells__title">性别</view>
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell weui-cell_input">
        <view class="weui-cell__hd">
          <view class="weui-label">当前选择</view>
        </view>
        <view class="weui-cell__bd">
          <picker bindchange="bindGenderPickerChange" value="{{baseInfor.gender}}" range="{{array}}">
            <view class="weui-input">{{array[baseInfor.gender]}}</view>
          </picker>
        </view>
      </view>
    </view>
    <view class="weui-cells__title">球龄</view>
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell weui-cell_input">
        <view class="weui-cell__hd">
          <view class="weui-label">当前选择</view>
        </view>
        <view class="weui-cell__bd">
          <picker bindchange="bindPlayAgePickerChange" value="{{baseInfor.playAge}}" range="{{arrayAge}}">
            <view class="weui-input">{{arrayAge[baseInfor.playAge]}}</view>
          </picker>
        </view>
      </view>
    </view>
  </view>
  <view class="page-section">
    <view class="page-section-title">居住地址（不用太详细哦）</view>
    <view class="textarea-wrp">
      <form bindsubmit="bindFormSubmit">
        <textarea class="textarea-color" placeholder="{{baseInfor.nowAddress}}" value='{{baseInfor.nowAddress}}' name="textarea" />
        <button type="primary" form-type="submit"> 提交 </button>
      </form>
    </view>
  </view>
</view>